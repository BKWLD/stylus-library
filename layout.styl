/**
 * Fill the container
 *
 * @param string $color background color
*/
fill(color = '')
	position absolute
	top 0
	bottom 0
	left 0
	right 0
	width 100%
	height 100%
	if color
		background-color color

/**
 * Setup background cover
 */
cover()
	background-size cover
	background-position center center
	background-repeat no-repeat
